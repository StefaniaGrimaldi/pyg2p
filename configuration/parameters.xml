<?xml version="1.0" encoding="utf-8"?>

<!-- this configuration file is needed only for conversion's attributes.

    The proper function and cutOffNegative attributes
    are selected using (Parameter.shortName, Conversion.id) as keys.

    Other attributes (description and unit) are used as strings only by informative loggers -->
<Parameters>

    <Parameter shortName="tp" description="Total precipitation" unit="kg m**-2 s**-1">
        <Conversion id="cut" unit="kg m**-2 s**-1" function="x=x" cutOffNegative="True"/>
        <Conversion id="tomm" unit="mm" function="x=x*1000" cutOffNegative="True"/>
    </Parameter>
    <Parameter shortName="e" description="Evaporation" unit="m">
        <Conversion id="tomm" unit="mm" function="x=-x*1000" cutOffNegative="True"/>
    </Parameter>
    <Parameter shortName="2T" description="2 meters Temperature" unit="K">
        <Conversion id="k2c" unit="C" function="x=x-273.15" cutOffNegative="False"/>
    </Parameter>
    <Parameter shortName="2t" description="2 meters Temperature" unit="K">
        <Conversion id="k2c" unit="C" function="x=x-273.15" cutOffNegative="False"/>
    </Parameter>
    <Parameter shortName="td_2m" description="2 meters Temperature" unit="K">
        <Conversion id="k2c" unit="C" function="x=x-273.15" cutOffNegative="False"/>
    </Parameter>
    <Parameter shortName="t_2m" description="2 meters Temperature" unit="K">
        <Conversion id="k2c" unit="C" function="x=x-273.15" cutOffNegative="False"/>
    </Parameter>

    <Parameter shortName="ALHFL_S" description="latent heat flux" unit="W/(m^2)">
        <Conversion id="tommd" unit="mm/d" function="x=x*(-0.0353)" cutOffNegative="True"/>
        <Conversion id="tommh" unit="mm/h" function="x=x*(-0.00147)" cutOffNegative="True"/>
    </Parameter>
<Parameter shortName="alhfl_s" description="latent heat flux" unit="W/(m^2)">
        <Conversion id="tommd" unit="mm/d" function="x=x*(-0.0353)" cutOffNegative="True"/>
        <Conversion id="tommh" unit="mm/h" function="x=x*(-0.00147)" cutOffNegative="True"/>
    </Parameter>
    <Parameter shortName="slhf" description="surface latent heat flux" unit="W/(m^2)">
        <Conversion id="tommd" unit="mm/d" function="x=x*(-0.0353)" cutOffNegative="True"/>
        <Conversion id="tommh" unit="mm/h" function="x=x*(-0.00147)" cutOffNegative="True"/>
    </Parameter>

    <Parameter shortName="2D" description="2 meters Dewpoint" unit="K">
        <Conversion id="k2c" unit="C" function="x=x-273.15"/>
    </Parameter>
    <Parameter shortName="sro" description="Surface Runoff" unit="m">
        <Conversion id="m2mm" unit="mm" function="x=x*1000" cutOffNegative="True"/>
    </Parameter>
    <Parameter shortName="ssro" description="Sub-Surface Runoff" unit="m">
        <Conversion id="m2mm" unit="mm" function="x=x*1000" cutOffNegative="True"/>
    </Parameter>

    <Parameter shortName="z" description="Geopotential" unit="m**2 s**-2"/>
    <Parameter shortName="fis" description="Geopotential cosmo" unit="m**2 s**-2"/>
    <Parameter shortName="Z" description="Geopotential" unit="m**2 s**-2"/>
    <Parameter shortName="FIS" description="Geopotential cosmo" unit="m**2 s**-2"/>
    <Parameter shortName="10u" description="10 meters u wind component" unit="m/s"/>
    <Parameter shortName="10v" description="10 meters v wind component" unit="m/s"/>

    <Parameter shortName="RAIN_GSP" description="surface precipitation amount, rain, grid scale" unit="kg/m^2">
        <Conversion id="cut" unit="kg m**-2 s**-1" function="x=x" cutOffNegative="True"/>
    </Parameter>
    <Parameter shortName="RAIN_CON" description="surface precipitation amount, rain, convective" unit="kg/m^2">
        <Conversion id="cut" unit="kg m**-2 s**-1" function="x=x" cutOffNegative="True"/>
    </Parameter>

</Parameters>
